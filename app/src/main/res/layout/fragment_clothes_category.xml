<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clothesCategory"
    tools:context=".ClothesCategory">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAD02E"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/backButtonCC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FAD02E"
                        app:srcCompat="@drawable/ic_back" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="130dp"
                        android:shadowColor="#ffffff"
                        android:text="CLOTHES"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/firstProduct"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_margin="2dp">

                        <ImageView
                            android:id="@+id/product1pic"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:src="@drawable/shoes" />

                        <TextView
                            android:id="@+id/product1label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="D/MS/X Shoes"
                            android:textColor="#000000"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/product1price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Php 1,000"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/secondProduct"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_margin="2dp">

                        <ImageView
                            android:id="@+id/product2pic"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:src="@drawable/shorts"
                            />

                        <TextView
                            android:id="@+id/product2label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Men Shorts"
                            android:textColor="#000000"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/product2price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Php 250"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/thirdProduct"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_margin="2dp">

                        <ImageView
                            android:id="@+id/product3pic"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:src="@drawable/shirt" />

                        <TextView
                            android:id="@+id/product3label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Men Tshirt"
                            android:textColor="#000000"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/product3price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Php 250"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fourthProduct"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_margin="2dp">

                        <ImageView
                            android:id="@+id/product4pic"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:src="@drawable/shirt2"
                            />

                        <TextView
                            android:id="@+id/product4label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mr. Silly Shirt"
                            android:textColor="#000000"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/product4price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Php 300"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/fifthProduct"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_margin="2dp">

                        <ImageView
                            android:id="@+id/product5pic"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:src="@drawable/tanktop" />

                        <TextView
                            android:id="@+id/product5label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Men Tank Top"
                            android:textColor="#000000"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/product5price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Php 200"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/sixthProduct"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_margin="2dp">

                        <ImageView
                            android:id="@+id/product6pic"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:src="@drawable/men_pants"
                            />

                        <TextView
                            android:id="@+id/product6label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Men Pants"
                            android:textColor="#000000"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/product6price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Php 1000"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>

        </TableLayout>
    </ScrollView>

</FrameLayout>