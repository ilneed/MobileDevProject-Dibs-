<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/serviceCategoryy"
    tools:context=".ServiceCategoryy">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAD02E"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/backButtonSC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FAD02E"
                        app:srcCompat="@drawable/ic_back" />
                </LinearLayout>
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="130dp"
                        android:shadowColor="#ffffff"
                        android:text="SERVICES"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_margin="2dp">

                        <ImageView
                            android:id="@+id/product1pic"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:src="@drawable/service1" />

                        <TextView
                            android:id="@+id/product1label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Team Quality Services"
                            android:textColor="#000000"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/product1price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Php 2,000"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_margin="2dp">

                        <ImageView
                            android:id="@+id/product2pic"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:src="@drawable/service2"
                            />

                        <TextView
                            android:id="@+id/product2label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plumbing Services"
                            android:textColor="#000000"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/product2price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Php 800"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_margin="2dp">

                        <ImageView
                            android:id="@+id/product3pic"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:src="@drawable/service3" />

                        <TextView
                            android:id="@+id/product3label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amante Plumbing Services"
                            android:textColor="#000000"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/product3price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Php 750"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_margin="2dp">

                        <ImageView
                            android:id="@+id/product4pic"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:src="@drawable/aromaservices"
                            />

                        <TextView
                            android:id="@+id/product4label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aroma Catering Services"
                            android:textColor="#000000"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/product4price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Php 3,500"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_margin="2dp">

                        <ImageView
                            android:id="@+id/product5pic"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:src="@drawable/bodypamper" />

                        <TextView
                            android:id="@+id/product5label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Home Massage Services"
                            android:textColor="#000000"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/product5price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Php 750"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_margin="2dp">

                        <ImageView
                            android:id="@+id/product6pic"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:src="@drawable/ecoclean"
                            />

                        <TextView
                            android:id="@+id/product6label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eco Clean Services"
                            android:textColor="#000000"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/product6price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Php 300"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>

        </TableLayout>
    </ScrollView>

</FrameLayout>